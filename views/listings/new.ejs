<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2">

    <h1>Create new listing</h1>
    <form action="/listings" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
        <div>
            <label for="title" class="form-label">Title</label>
            <input required type="text" name="listing[title]" placeholder="Enter title" class="form-control">
        </div>
        <div>
            <label  for="description" class="form-label">Description</label>
            <textarea required name="listing[description]" placeholder="Enter description" class="form-control"></textarea>
        </div>
        <div>
            <label for="price" class="form-label">Price</label>
            <input required type="number" name="listing[price]" class="form-control" placeholder="Enter price">
        </div>
        <!-- <div>
            <label for="image" class="form-label">Image Link</label>
            <input type="text" name="listing[image][url]" placeholder="Enter image url/link" class="form-control">

        </div> -->
        <div>
            <label for="image" class="form-label">Upload images</label>
            <input type="file" name="listing[image]" required class="form-control">

        </div>
        <div>
            <label for="location" class="form-label">Location</label>
            <input required type="text" name="listing[location]" placeholder="Enter location" class="form-control">
        </div>
        <div>
            <label for="country" class="form-label">Country</label>
            <input required type="text" name="listing[country]" placeholder="Enter country name" class="form-control">
        </div>
        <button class="btn btn-dark edit-btn mt-3">Add</button>
    </form>
    
</div>
</div>
<br>
